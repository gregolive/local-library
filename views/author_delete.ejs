      </div>
    </nav>
    
    <main>
      <section>
        <h2><span class="subtitle"><%= title %>:</span> <%= author.name %></h2>

        <% if (author_books.length > 0) { %>
          <p>You must delete the following books before attempting to delete this author:</p>

          <ul class="card-list large-cards">
            <% author_books.forEach((book) => { %>
              <li class="card">
                <a href="<%=book.url%>"><%= book.title %></a>
                <p><%= book.summary %></p>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>Are you sure you want to delete this Author?</p>

          <form method="post" action="">
            <input type="hidden" name="authorid" id="authorid" value="<%= author._id %>">  
            <button type="submit" class="btn btn-secondary">Delete</button>
          </form>
        <% } %> 
      </section>
    </main>

    <footer>
      <p>
        &copy;<a href="https://github.com/gregolive" target="_blank" class="footer-link">gregolive</a>
      </p>
    </footer>
  </div>
</body>
</html>