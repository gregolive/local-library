      </div>
    </nav>
    
    <main>
      <section>
        <h2><%= title %></h2>

        <% if (author_list.length > 0) { %>
          <p>The library currently contains books from the following authors:</p>
          <ul class="card-list">
            <% author_list.forEach((author) => { %>
              <li class="card">
                <a href="<%=author.url%>"><%= author.name %></a>
                <small>
                  <% if (author.lifespan) { %>
                    (<%= author.lifespan %>)
                  <% } else { %>
                    (No birthday info)
                  <% } %>
                </small>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>There are no authors</p>
        <% } %>
      </section>
    </main>

    <footer>
      <p>
        &copy;<a href="https://github.com/gregolive" target="_blank" class="footer-link">gregolive</a>
      </p>
    </footer>
  </div>
</body>
</html>