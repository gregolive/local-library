<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Local Library</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <div class="container">
    <nav class='sidebar-nav'>
      <a href='/catalog' class="nav-title">
        <h1>Local Library</h1>
      </a>
      
      <div class="nav-links">
        <a href='/catalog/books'>ðŸ“š Library</a>
        <a href='/catalog/bookinstances'>ðŸ“– Books</a>
        <a href='/catalog/authors'>ðŸ‘¤ Authors</a>
        <a href='/catalog/genres'>ðŸŽ² Genres</a>
      </div>
      
      <div class="nav-links">
        <a href='/catalog/book/create'>âž• Add Book</a>
        <a href='/catalog/bookinstance/create'>âž• Add Book Copy</a>
        <a href='/catalog/author/create'>âž• Add Author</a>
        <a href='/catalog/genre/create'>âž• Add Genre</a>
      </div>
    </nav>
    
    <main>
      <section>
        <h2><%= title %></h2>

        <form method="post" action="">
          <label for="book">
            <span>Author</span>
            <select name="book" id="book">
              <% book_list.sort((a, b) => {
                let textA = a.title.toUpperCase();
                let textB = b.title.toUpperCase();
                return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;
              }) %>

              <% book_list.forEach((book) => { %> 
                <% if (typeof bookinstance === "undefined") { %>
                  <option value="<%= book._id %>"><%= book.title %></option> 
                <% } else { %>
                  <option value="<%= book._id %>" <%= (selected_book.toString()===book._id.toString()) ? "selected" : "" %>><%= book.title %></option>
                <% } %> 
              <% }) %> 
            </select>
          </label>

          <label for="imprint">
            <span>Imprint</span>
            <input type="text" name="imprint" id="imprint" placeholder="Publisher and date information" value="<%= (typeof bookinstance === "undefined") ? "" : bookinstance.imprint %>">
          </label>

          <label for="due_back">
            <span>Due Back</span>
            <input type="date" name="due_back" id="due_back" placeholder="dd/mm/yyyy" value="<%= (typeof bookinstance === "undefined" || !bookinstance.due_back) ? "" : formatDate(bookinstance.due_back, 'yyyy-MM-dd') %>">
          </label>

          <label for="status">
            <span>Status</span>
            <select name="status" id="status">
              <% statuses.forEach((status) => { %> 
                <% if (typeof bookinstance === "undefined") { %>
                  <option value="<%= status %>"><%= status %></option> 
                <% } else { %>
                  <option value="<%= status %>" <%= (status===bookinstance.status) ? "selected" : "" %>><%= status %></option>
                <% } %>
              <% }) %> 
            </select>
          </label>

          <button type="submit" class="btn btn-primary">Submit</button>

          <ul class="error-list">
            <% if (typeof errors !== "undefined" && errors.length > 0) { %>
              <% errors.forEach((error, index) => { %>
                <li class="error-item"><%= error.msg %></li>
              <% }) %>
            <% } %>
          </ul>
        </form>
      </section>
    </main>

    <footer>
      <p>
        &copy;<a href="https://github.com/gregolive" target="_blank" class="footer-link">gregolive</a>
      </p>
    </footer>
  </div>
</body>
</html>